@inject IJSRuntime JSRuntime
@inject NavigationManager NavigationManager

<nav class="navbar">
    <div class="navbar-logo">
        <!-- Logo og systemnavn -->
        <img src="images/kantine-logo.png" alt="Kantine Logo">
        <span>KantineSystem</span>
    </div>
    <div class="nav-links">
        <!-- Navigation til forskellige sektioner -->
        <a href="/overview">Hjem</a>
        <a href="/taskitemcrud">Opgave Håndtering</a>
        <a href="/eventcrud">Event Håndtering</a>
        <!-- Log ud-knap -->
        <button @onclick="Logout" class="btn btn-danger">Log ud</button>
    </div>
</nav>

<style>
    /* Styling for navbar */
    .navbar {
        width: 250px; 
        height: 100vh; 
        background-color: #ffffff; 
        border-right: 2px solid #ddd; 
        padding: 1rem 0; 
        display: flex;
        flex-direction: column; 
        align-items: center;
        justify-content: flex-start; 
    }

    /* Styling for logo sektion */
    .navbar-logo {
        display: flex; 
        align-items: center; 
        gap: 0.5rem; 
        margin-bottom: 1rem; 
    }

    .navbar-logo img {
        width: 40px; 
        height: 40px; 
    }

    
    .nav-links {
        display: flex; 
        flex-direction: column; 
        align-items: center; 
        gap: 1rem; 
        width: 100%; 
        margin-top: 1rem; 
    }

    .nav-links a {
        text-decoration: none; 
        color: #333; 
        font-weight: bold; 
        font-size: 1.1rem; 
        transition: color 0.3s ease; 
    }

    .nav-links a:hover {
        color: #157347; 
    }
</style>

@code {
    // Bruges til at fortælle den overordnede komponent, at brugeren er logget ud.
// F.eks. skjules navbaren, og brugeren navigeres til login-siden.
[Parameter] public EventCallback OnLogout { get; set; }

// Håndterer logout-logikken
private async Task Logout()
{
// Fjerner userRole fra sessionStorage
await JSRuntime.InvokeVoidAsync("sessionStorage.removeItem", "userRole");

// Informerer layoutet om, at brugeren er logget ud
if (OnLogout.HasDelegate)
{
await OnLogout.InvokeAsync();
}

// Navigerer til login-siden
NavigationManager.NavigateTo("/");
}
}
