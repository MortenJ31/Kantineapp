@inject IJSRuntime JSRuntime
@inject NavigationManager NavigationManager

<nav class="navbar">
    <div class="navbar-logo">
        <img src="images/kantine-logo.png" alt="Kantine Logo">
        <span>KantineSystem</span>
    </div>
    <div class="nav-links">
        <a href="/overview">Hjem</a>
        <a href="/taskitemcrud">Opgave Håndtering</a>
        <a href="/eventcrud">Event Håndtering</a>
        <button @onclick="Logout" class="btn btn-danger">Log ud</button>
    </div>
</nav>

<style>
    .navbar {
        width: 250px;
        height: 100vh; /* Gør navbaren fuld højde */
        background-color: #ffffff;
        border-right: 2px solid #ddd;
        padding: 1rem 0; /* Sørger for padding omkring indholdet */
        display: flex;
        flex-direction: column; /* Stak elementer lodret */
        align-items: center;
        justify-content: flex-start; /* Hold elementer i toppen */
    }

    .navbar-logo {
        display: flex;
        align-items: center;
        gap: 0.5rem; /* Gør plads mellem logo og tekst */
        margin-bottom: 1rem; /* Adskil logo fra links */
    }

    .navbar-logo img {
        width: 40px;
        height: 40px; /* Ensartet størrelse til logoet */
    }

    .nav-links {
        display: flex;
        flex-direction: column; /* Links stables lodret */
        align-items: center;
        gap: 1rem; /* Gør plads mellem links */
        width: 100%;
        margin-top: 1rem; /* Lidt luft under logoet */
    }

    .nav-links a {
        text-decoration: none; /* Fjern understregning */
        color: #333;
        font-weight: bold;
        font-size: 1.1rem;
        transition: color 0.3s ease;
    }

    .nav-links a:hover {
        color: #157347; /* Grøn farve ved hover */
    }

</style>

@code {
    [Parameter] public EventCallback OnLogout { get; set; }

    private async Task Logout()
    {
        // Fjern userRole fra sessionStorage
        await JSRuntime.InvokeVoidAsync("sessionStorage.removeItem", "userRole");

        // Informér layoutet om logout
        if (OnLogout.HasDelegate)
        {
            await OnLogout.InvokeAsync();
        }

        // Naviger til login-siden
        NavigationManager.NavigateTo("/");
    }
}